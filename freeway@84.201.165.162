version: '3.7'
volumes:
  postgres_data:
  static_volume:

services:
  db:
    image: postgres:12.0
    restart: always
    volumes:
      - postgres_data:/var/lib/postgresql/data/
    env_file:
      - ./.env
  web:
    image: fr33vvay/yamdb:latest
    restart: always
    volumes:
      - static_volume:/code/static
    expose:
      - 8000
    depends_on:
      - db
    env_file:
      - ./.env
  nginx:
    build:
      context: .
      dockerfile: Dockerfile_nginx
    volumes:
      - static_volume:/code/static
    ports:
      - 80:80
    depends_on:
      - web
